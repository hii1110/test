@page
@model HaQuangHuy_SE18C.NET_A02.Pages.Lecturer.NewsViewModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "News Articles - Lecturer";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>News Articles</h2>
            <p class="text-muted">View active news articles</p>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="d-flex">
                <input type="text" name="searchTerm" value="@Model.SearchTerm" 
                       class="form-control me-2" placeholder="Search active news articles..." />
                <button type="submit" class="btn btn-primary">Search</button>
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <a href="/Lecturer/NewsView" class="btn btn-outline-secondary ms-2">Clear</a>
                }
            </form>
        </div>
    </div>

    @if (Model.NewsArticles.Any())
    {
        <div class="row g-4">
            @foreach (var article in Model.NewsArticles)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge bg-primary">@article.Category?.CategoryName</span>
                                <small class="text-muted">@article.CreatedDate?.ToString("MMM dd, yyyy")</small>
                            </div>
                            <h5 class="card-title">@article.NewsTitle</h5>
                            <h6 class="card-subtitle mb-3 text-muted">@article.Headline</h6>
                            <p class="card-text">
                                @if (article.NewsContent?.Length > 200)
                                {
                                    @article.NewsContent.Substring(0, 200)<text>...</text>
                                }
                                else
                                {
                                    @article.NewsContent
                                }
                            </p>
                            @if (article.NewsTags.Any())
                            {
                                <div class="mb-2">
                                    @foreach (var newsTag in article.NewsTags)
                                    {
                                        <span class="badge bg-secondary me-1">@newsTag.Tag?.TagName</span>
                                    }
                                </div>
                            }
                            <hr />
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-person"></i> @article.CreatedBy?.AccountName
                                </small>
                                @if (!string.IsNullOrEmpty(article.NewsSource))
                                {
                                    <small class="text-muted">
                                        <i class="bi bi-link"></i> @article.NewsSource
                                    </small>
                                }
                            </div>
                            <button class="btn btn-sm btn-outline-primary mt-3 w-100" 
                                    data-bs-toggle="modal" 
                                    data-bs-target="#detailModal@(article.NewsArticleID)">
                                View Details
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Detail Modal for each article -->
                <div class="modal fade" id="detailModal@(article.NewsArticleID)" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">@article.NewsTitle</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <span class="badge bg-primary">@article.Category?.CategoryName</span>
                                    <span class="badge bg-success">Active</span>
                                </div>
                                <h6 class="text-muted mb-3">@article.Headline</h6>
                                <div class="mb-3">
                                    <strong>Content:</strong>
                                    <p class="mt-2">@article.NewsContent</p>
                                </div>
                                @if (article.NewsTags.Any())
                                {
                                    <div class="mb-3">
                                        <strong>Tags:</strong><br/>
                                        @foreach (var newsTag in article.NewsTags)
                                        {
                                            <span class="badge bg-secondary me-1">@newsTag.Tag?.TagName</span>
                                        }
                                    </div>
                                }
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>Created By:</strong> @article.CreatedBy?.AccountName
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Created Date:</strong> @article.CreatedDate?.ToString("MMMM dd, yyyy hh:mm tt")
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(article.NewsSource))
                                {
                                    <div class="mt-3">
                                        <strong>Source:</strong> @article.NewsSource
                                    </div>
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">No News Articles Found</h4>
            <p>@(string.IsNullOrEmpty(Model.SearchTerm) ? "There are no active news articles available at the moment." : $"No results found for '{Model.SearchTerm}'.")</p>
        </div>
    }
</div>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.2) !important;
    }
</style>
